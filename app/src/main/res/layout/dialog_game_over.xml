<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00000000">


    <!-- Google Banner -->
    <LinearLayout
        android:id="@+id/ad_googleBanner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <LinearLayout
            android:id="@+id/linearLayout_banner"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="vertical" />

    </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/ad_googleBanner">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="50dp"
            android:background="@drawable/leve_complete_bg">

            <RelativeLayout
                android:id="@+id/ll"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="50dp">

                <RelativeLayout
                    android:id="@+id/ll_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/arial_rounded"
                        android:text="@string/levell"
                        android:textColor="@color/white"
                        android:textSize="15dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txt_level"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:fontFamily="@font/arial_rounded"
                        android:text="2"
                        android:textColor="@color/white"
                        android:textSize="15dp"
                        android:textStyle="bold" />


                </RelativeLayout>


            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/lll"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ll"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp">

                <RelativeLayout
                    android:id="@+id/ll_11"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/arial_rounded"
                        android:text="@string/scoree"
                        android:textColor="@color/white"
                        android:textSize="15dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txt_score"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:fontFamily="@font/arial_rounded"
                        android:text="2"
                        android:textColor="@color/white"
                        android:textSize="15dp"
                        android:textStyle="bold" />


                </RelativeLayout>


            </RelativeLayout>


            <ImageView
                android:id="@+id/ll_2"
                android:layout_width="match_parent"
                android:layout_height="4dp"
                android:layout_below="@+id/lll"
                android:layout_marginTop="15dp"
                android:scaleType="fitXY"
                android:src="@drawable/line" />


            <TextView
                android:id="@+id/txt_total_doller"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ll_2"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/arial_rounded"
                android:gravity="center"
                android:text="@string/bestscore"
                android:textColor="@color/yellow"
                android:textSize="20dp"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/btn_next_level"
                style="@style/buttontext"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_below="@+id/txt_total_doller"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:background="@drawable/plain_button"
                android:text="@string/continuee"
                android:textSize="20dp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:src="@drawable/ic_game_over" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="23dp"
                android:fontFamily="@font/arial_rounded"
                android:text="@string/gameover"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:textStyle="bold" />

        </RelativeLayout>

    </RelativeLayout>


</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:layout_width="520dp"
        android:layout_height="300dp"
        android:layout_centerInParent="true">


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/bg_purchase_dialog" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/arial_rounded"
            android:gravity="center_horizontal"
            android:padding="20dp"
            android:text="@string/shop"
            android:textColor="@color/yellow"
            android:textSize="20dp"
            android:textStyle="bold" />


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="100dp">


            <RelativeLayout
                android:id="@+id/card_1"
                android:layout_width="wrap_content"
                android:layout_height="140dp"
                android:layout_centerVertical="true"
                android:layout_margin="10dp">

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="130dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/purchase_card_one" />

                <TextView
                    android:id="@+id/txt_pack_one"
                    android:layout_above="@+id/txt_pack_1_price"
                    android:layout_width="100dp"
                    android:layout_height="18dp"
                    android:layout_marginBottom="3dp"
                    android:text="9 Hearts"
                    android:gravity="center"
                    android:textColor="@color/yellow"
                    android:fontFamily="@font/arial_rounded"
                    android:textStyle="bold"
                    android:textSize="13dp"
                    android:background="@drawable/bg_line"/>

                <TextView
                    android:id="@+id/txt_pack_1_price"
                    android:layout_width="80dp"
                    android:layout_height="30dp"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/plain_button"
                    android:fontFamily="@font/arial_rounded"
                    android:gravity="center"
                    android:singleLine="true"
                    android:textColor="@color/white"
                    android:textStyle="bold" />


            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/card_2"
                android:layout_width="wrap_content"
                android:layout_height="140dp"
                android:layout_centerVertical="true"
                android:layout_margin="10dp"
                android:layout_toRightOf="@+id/card_1">

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="130dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/purchase_card_two" />


                <TextView
                    android:id="@+id/txt_pack_two"
                    android:layout_above="@+id/txt_pack_2_price"
                    android:layout_width="100dp"
                    android:layout_height="18dp"
                    android:layout_marginBottom="3dp"
                    android:text="9 Hearts"
                    android:gravity="center"
                    android:textColor="@color/yellow"
                    android:fontFamily="@font/arial_rounded"
                    android:textStyle="bold"
                    android:textSize="13dp"
                    android:background="@drawable/bg_line"/>

                <TextView
                    android:id="@+id/txt_pack_2_price"
                    android:layout_width="80dp"
                    android:layout_height="30dp"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/plain_button"
                    android:fontFamily="@font/arial_rounded"
                    android:gravity="center"
                    android:singleLine="true"
                    android:textColor="@color/white"
                    android:textStyle="bold" />


            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/card_3"
                android:layout_width="wrap_content"
                android:layout_height="140dp"
                android:layout_centerVertical="true"
                android:layout_margin="10dp"
                android:layout_toRightOf="@+id/card_2">

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="130dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/purchase_card_three" />

                <TextView
                    android:id="@+id/txt_pack_three"
                    android:layout_width="100dp"
                    android:layout_height="18dp"
                    android:layout_above="@+id/txt_pack_3_price"
                    android:layout_marginBottom="3dp"
                    android:background="@drawable/bg_line"
                    android:fontFamily="@font/arial_rounded"
                    android:gravity="center"
                    android:text="9 Hearts"
                    android:textColor="@color/yellow"
                    android:textSize="13dp"
                    android:textStyle="bold" />


                <TextView
                    android:id="@+id/txt_pack_3_price"
                    android:layout_width="80dp"
                    android:layout_height="30dp"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/plain_button"
                    android:fontFamily="@font/arial_rounded"
                    android:gravity="center"
                    android:singleLine="true"
                    android:textColor="@color/white"
                    android:textStyle="bold" />


            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/card_4"
                android:layout_width="wrap_content"
                android:layout_height="140dp"
                android:layout_centerVertical="true"
                android:layout_margin="10dp"
                android:layout_toRightOf="@+id/card_3">

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="130dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/purchase_card_four" />

                <TextView
                    android:id="@+id/txt_pack_four"
                    android:layout_width="100dp"
                    android:layout_height="18dp"
                    android:layout_above="@+id/txt_pack_4_price"
                    android:layout_marginBottom="3dp"
                    android:background="@drawable/bg_line"
                    android:fontFamily="@font/arial_rounded"
                    android:gravity="center"
                    android:text="@string/removeAd"
                    android:textColor="@color/yellow"
                    android:textSize="13dp"
                    android:textStyle="bold" />


                <TextView
                    android:id="@+id/txt_pack_4_price"
                    android:layout_width="80dp"
                    android:layout_height="30dp"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/plain_button"
                    android:fontFamily="@font/arial_rounded"
                    android:gravity="center"
                    android:singleLine="true"
                    android:textColor="@color/white"
                    android:textStyle="bold" />


            </RelativeLayout>


        </RelativeLayout>

        <ImageView
            android:id="@+id/btn_close"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="30dp"
            android:src="@drawable/ic_close" />

    </RelativeLayout>


</RelativeLayout>
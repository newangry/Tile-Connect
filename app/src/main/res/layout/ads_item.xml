<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_margin="5dp"
        android:background="@drawable/box"
        android:padding="10dp"
        android:id="@+id/ad"
        android:layout_width="match_parent"
        android:layout_height="107dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_gravity="center"
            android:id="@+id/ad_icon"
            android:layout_width="54dp"
            android:layout_height="54dp"
            android:src="@drawable/sweetcrush" />

        <LinearLayout
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/ad_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="@string/app_name"
                android:textColor="@color/white"
                android:textSize="15dp"
                android:textStyle="bold" />

            <TextView
                android:gravity="center|left"
                android:minLines="4"
                android:id="@+id/ad_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="With Onet Connect Flowers, you can play the classic Onet connect game with Super Fun and Beautiful Flowers style. Very interesting and relaxed. Try this game one time and love it forever!"
                android:textColor="@color/white"
                android:textSize="14dp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
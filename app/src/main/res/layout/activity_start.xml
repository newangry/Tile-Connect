<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bgmenu"
    android:orientation="vertical">

    <ImageView
        android:layout_width="450dp"
        android:layout_height="110dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:src="@drawable/ic_world" />


    <LinearLayout
        android:layout_width="160dp"
        android:layout_marginBottom="30dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/ll_fun"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/btn_around_the_world"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:layout_centerHorizontal="true"
                android:background="@drawable/plain_button"
                android:fontFamily="@font/arial_rounded"
                android:text="@string/around_the_world"
                android:textColor="@color/white"
                android:gravity="center"
                android:textSize="18dp"
                android:layout_marginEnd="5dp"
                android:textStyle="bold" />




        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/txt_score"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:layout_centerHorizontal="true"
                android:background="@drawable/bg_btn_high_score"
                android:fontFamily="@font/arial_rounded"
                android:gravity="center"
                android:text="@string/high_score"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="16dp"
                android:textStyle="bold" />


        </LinearLayout>


    </LinearLayout>





    <CheckBox
        android:id="@+id/checkBoxRelaxed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/checkBoxEasy"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="10dp"
        android:button="@drawable/customcheckbox"
        android:paddingStart="5dp"
        android:text="@string/relaxed"
        android:textColor="@color/yellow"
        android:textSize="15dp"
        android:textStyle="bold" />




    <CheckBox
        android:id="@+id/checkBoxEasy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/checkBoxHard"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="10dp"
        android:button="@drawable/customcheckbox"
        android:paddingStart="5dp"
        android:text="@string/easy"
        android:textColor="@color/yellow"
        android:textSize="15dp"
        android:textStyle="bold" />

    <CheckBox
        android:id="@+id/checkBoxHard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="20dp"
        android:button="@drawable/customcheckbox"
        android:paddingStart="5dp"
        android:text="@string/hard"
        android:textColor="@color/yellow"
        android:textSize="15dp"
        android:textStyle="bold" />


    <LinearLayout
        android:id="@+id/ll_fun"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/btn_rate"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_margin="10dp"
            android:src="@drawable/ic_rate" />

        <ImageView
            android:id="@+id/btn_language"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_margin="10dp"
            android:src="@drawable/ic_language" />

        <ImageView
            android:id="@+id/btn_store"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_margin="10dp"
            android:src="@drawable/ic_cart" />


        <ImageView
            android:id="@+id/btn_moreapp"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_margin="10dp"
            android:src="@drawable/moreapps" />

    </LinearLayout>


    <!-- Google Banner -->
    <LinearLayout
        android:id="@+id/ad_googleBanner"
        android:layout_width="320dp"
        android:layout_centerHorizontal="true"
        android:layout_height="50dp"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/linearLayout_banner"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="vertical" />

    </LinearLayout>


</RelativeLayout>

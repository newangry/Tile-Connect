<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bgmenu"
    android:orientation="vertical">

    <LinearLayout
        android:layout_weight="1"
        android:id="@+id/ll_fun"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/ads_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="vertical" />

    </LinearLayout>

    <LinearLayout
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:orientation="horizontal">

        <TextView
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:layout_marginRight="5dp"
            android:id="@+id/ad_rate_us_btn"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:background="@drawable/plain_button"
            android:gravity="center"
            android:text="@string/rateusbtn"
            android:textColor="@color/white"
            android:textSize="16dp"
            android:singleLine="true"
            android:textAllCaps="true"
            android:textStyle="bold" />

        <TextView
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:layout_marginLeft="5dp"
            android:id="@+id/ad_play_btn"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:background="@drawable/plain_button"
            android:gravity="center"
            android:singleLine="true"
            android:text="@string/backtogamebtn"
            android:textColor="@color/white"
            android:textSize="16dp"
            android:textAllCaps="true"
            android:textStyle="bold" />
    </LinearLayout>

</LinearLayout>
